<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="registerviewmodel"
            type="com.example.currency.viewmodel.register.RegisterViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.register.RegisterActivity"
        android:background="#f0f0f0">
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/white"
            android:elevation="3dp"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/txt_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/sign_up"
                android:textColor="#202020"
                android:textSize="18sp" />
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/baseline_chevron_left"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relative1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/logo"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="20dp"
                        android:background="@drawable/logo"/>
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/relative2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#8A8A8A"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Large"
                    android:hint="اس"
                    app:passwordToggleTint="#8A8A8A"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logo"
                    android:layout_margin="10dp"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false"
                    app:endIconDrawable="@drawable/user_square">
                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:background="@drawable/txt_login_bg"
                        android:gravity="center_vertical|right"
                        android:fontFamily="@font/cairo_medium2"
                        android:maxLines="1"
                        android:textColorHint="#BDBDBD"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:hint="@string/name"
                        android:drawableRight="@drawable/user_square"
                        android:drawablePadding="5dp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/relative3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#8A8A8A"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Large"
                    android:hint="كلمة المرور الجديدة"
                    app:passwordToggleTint="#8A8A8A"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relative2"
                    android:layout_margin="10dp"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">
                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:inputType="number"
                        android:background="@drawable/txt_login_bg"
                        android:gravity="center_vertical|right"
                        android:fontFamily="@font/cairo_medium2"
                        android:maxLines="1"
                        android:textColorHint="#BDBDBD"
                        android:padding="10dp"
                        android:hint="@string/phone"
                        android:textColor="@color/black"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/call" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/relative4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#8A8A8A"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Large"
                    app:passwordToggleTint="#8A8A8A"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relative3"
                    android:layout_margin="10dp"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">
                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:inputType="textPassword"
                        android:background="@drawable/txt_login_bg"
                        android:gravity="center_vertical|right"
                        android:fontFamily="@font/cairo_medium2"
                        android:maxLines="1"
                        android:textColorHint="#BDBDBD"
                        android:padding="10dp"
                        android:hint="@string/user_password"
                        android:textColor="@color/black"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/lock" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/relative5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#8A8A8A"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Large"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relative4"
                    android:layout_margin="10dp"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">
                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:background="@drawable/txt_login_bg"
                        android:padding="10dp"
                        android:fontFamily="@font/cairo_medium2"
                        android:maxLines="1"
                        android:hint="@string/user_email"
                        android:textColorHint="#BDBDBD"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/ic_pass_eye_icon" />
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relative5"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/sign_up"
                    android:fontFamily="@font/cairo_bold"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:background="@drawable/btn_login_background"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>